{
  "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist/",

      "noEmit": true,

      "allowJs": true,

      "module": "esnext",
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,

      "strict": true,

      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,

      "target": "es6",
      "esModuleInterop": true,

      "resolveJsonModule": true,

      "jsx": "react-jsx",

      "typeRoots": [
        "src/types",
        "node_modules/@types"
      ]
  },
  "include": ["src", "types"]
}